{
  "name": "taskbox",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "test": "jest",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "docs:json": "compodoc -p ./tsconfig.json -e json -d .",
    "storybook": "npm run docs:json && start-storybook -p 6006",
    "build-storybook": "npm run docs:json && build-storybook",
    "jest": "jest --watch",
    "chromatic": "npx chromatic --project-token x2qb5zezsg"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~10.1.5",
    "@angular/common": "~10.1.5",
    "@angular/compiler": "~10.1.5",
    "@angular/core": "~10.1.5",
    "@angular/forms": "~10.1.5",
    "@angular/platform-browser": "~10.1.5",
    "@angular/platform-browser-dynamic": "~10.1.5",
    "@angular/router": "~10.1.5",
    "@ngxs/devtools-plugin": "^3.7.0",
    "@ngxs/logger-plugin": "^3.7.0",
    "@ngxs/store": "^3.7.0",
    "rxjs": "~6.6.0",
    "tslib": "^2.0.0",
    "zone.js": "~0.10.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.1001.6",
    "@angular/cli": "^11.2.13",
    "@angular/compiler-cli": "~10.1.5",
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-typescript": "^7.10.4",
    "@compodoc/compodoc": "^1.1.11",
    "@storybook/addon-actions": "^6.3.0-alpha.34",
    "@storybook/addon-controls": "^6.3.0-alpha.34",
    "@storybook/addon-essentials": "^6.3.0-alpha.34",
    "@storybook/addon-knobs": "^6.3.0-alpha.21",
    "@storybook/addon-links": "^6.3.0-alpha.34",
    "@storybook/addon-storyshots": "^6.3.0-alpha.34",
    "@storybook/angular": "^6.3.0-alpha.34",
    "@testing-library/angular": "^10.1.0",
    "@testing-library/jest-dom": "^5.11.4",
    "@types/jest": "^26.0.14",
    "@types/node": "^12.11.1",
    "babel-loader": "^8.1.0",
    "chromatic": "^5.2.0",
    "codelyzer": "^6.0.0",
    "jest": "^26.5.2",
    "jest-preset-angular": "^8.3.1",
    "protractor": "~7.0.0",
    "react-is": "^16.13.1",
    "ts-node": "~8.3.0",
    "tslint": "~6.1.0",
    "typescript": "~4.0.2"
  },
  "jest": {
    "preset": "jest-preset-angular",
    "setupFilesAfterEnv": [
      "<rootDir>/src/jest-config/setup.ts"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!@storybook/*)"
    ],
    "testPathIgnorePatterns": [
      "../node_modules/",
      "../dist/",
      "../storybook-static/",
      "../src/test.ts"
    ],
    "coveragePathIgnorePatterns": [
      "/jest-config/",
      "/node_modules/"
    ],
    "snapshotSerializers": [
      "<rootDir>/node_modules/jest-preset-angular/AngularSnapshotSerializer.js",
      "<rootDir>/node_modules/jest-preset-angular/HTMLCommentSerializer.js"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "<rootDir>/tsconfig.spec.json",
        "stringifyContentPathRegex": "\\.html$",
        "diagnostics": false,
        "isolatedModules": true,
        "astTransformers": {
          "before": [
            "jest-preset-angular/build/InlineFilesTransformer",
            "jest-preset-angular/build/StripStylesTransformer"
          ]
        }
      }
    },
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/src/$1",
      "^app/(.*)$": "<rootDir>/src/app/$1",
      "^assets/(.*)$": "<rootDir>/src/assets/$1",
      "^environments/(.*)$": "<rootDir>/src/environments/$1",
      "\\.(css|less)$": "<rootDir>/src/jest-config/styleMock.js",
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/src/jest-config/fileMock.js",
      "jest-preset-angular/(.*)$": "<rootDir>/../node_modules/jest-preset-angular/build/$1"
    }
  },
  "transform": {
    "^.+\\.(ts|html)$": "ts-jest",
    "^.+\\.js$": "babel-jest",
    "^.+\\.stories\\.[jt]sx?$": "@storybook/addon-storyshots/injectFileName"
  },
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js",
    "jsx",
    "json",
    "node",
    ".html"
  ]
}
